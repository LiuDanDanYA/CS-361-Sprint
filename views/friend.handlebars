{{>header}}

<h1 class="friendTitle">Friends</h1>
<div class="wrapper">
  <table id="friendTable">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Telephone</th>
        <th>Email</th>
        <th>Status</th>
        <th>Remainded</th>
        <th>Edit</th>
      </tr>
    </thead>
    {{#each data}}
    <tr>
      <td>{{this.FirstName}}</td>
      <td>{{this.LastName}}</td>
      <td>{{this.Telephone}}</td>
      <td>{{this.Email}}</td>
      <td>{{this.Status}}</td>
      <td><input type="checkbox"></td>
      <td><button class="editbtn">Edit</button></td>
    </tr>
